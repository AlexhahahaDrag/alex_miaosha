<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alex.user.mapper.orgUserInfo.OrgUserInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.alex.user.entity.orgUserInfo.OrgUserInfo">
        <result column="id" property="id" />
        <result column="creator" property="creator" />
        <result column="create_time" property="createTime" />
        <result column="updater" property="updater" />
        <result column="update_time" property="updateTime" />
        <result column="deleter" property="deleter" />
        <result column="delete_time" property="deleteTime" />
        <result column="is_delete" property="delete" />
        <result column="operator" property="operator" />
        <result column="operate_time" property="operateTime" />
        <result column="org_id" property="orgId" />
        <result column="user_id" property="userId" />
        <result column="summary" property="summary" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        t_org_user_info.id,
        t_org_user_info.creator,
        t_org_user_info.create_time,
        t_org_user_info.updater,
        t_org_user_info.update_time,
        t_org_user_info.deleter,
        t_org_user_info.delete_time,
        t_org_user_info.is_delete,
        t_org_user_info.operator,
        t_org_user_info.operate_time,
        t_org_user_info.org_id, t_org_user_info.user_id, t_org_user_info.summary, t_org_user_info.`status`
    </sql>

    <select id="getPage" resultType="com.alex.api.user.vo.orgUserInfo.OrgUserInfoVo">
        select <include refid="Base_Column_List"/> from t_org_user_info
        <where>
            t_org_user_info.is_delete = 0
            <include refid="queryInfo"/>
        </where>
    </select>

    <select id="queryOrgUserInfo" resultType="com.alex.api.user.vo.orgUserInfo.OrgUserInfoVo">
        select <include refid="Base_Column_List"/> from t_org_user_info
        <where>
            t_org_user_info.id = #{id}
            and t_org_user_info.is_delete = 0
        </where>
    </select>

     <sql id="queryInfo">
        <if test = "orgUserInfoVo != null">
          <if test = "orgUserInfoVo.orgId != null">
            and t_org_user_info.org_id like concat('%', #{orgUserInfoVo.orgId}, '%')
          </if>
          <if test = "orgUserInfoVo.userId != null">
            and t_org_user_info.user_id like concat('%', #{orgUserInfoVo.userId}, '%')
          </if>
          <if test = "orgUserInfoVo.summary != null">
            and t_org_user_info.summary like concat('%', #{orgUserInfoVo.summary}, '%')
          </if>
          <if test = "orgUserInfoVo.status != null">
            and t_org_user_info.status like concat('%', #{orgUserInfoVo.status}, '%')
          </if>
        </if>
     </sql>

    <select id="getOrgInfoList" resultType="com.alex.api.user.vo.orgInfo.OrgInfoVo">
        select
            t_org_info.id,
            t_org_info.creator,
            t_org_info.create_time,
            t_org_info.updater,
            t_org_info.update_time,
            t_org_info.deleter,
            t_org_info.delete_time,
            t_org_info.is_delete,
            t_org_info.operator,
            t_org_info.operate_time,
            t_org_info.org_code,
            t_org_info.org_name,
            t_org_info.org_short_name,
            t_org_info.parent_id,
            t_org_info.summary,
            t_org_info.`status`
        from
            t_org_info
    left join
            t_org_user_info
          on t_org_info.id = t_org_user_info.org_id
        <where>
            t_org_user_info.user_id = ${userId}
            and t_org_info.status = 1
            and t_org_user_info.status = 1
            and t_org_info.is_delete = 0
            and t_org_user_info.is_delete = 0
        </where>
    </select>
</mapper>
